{
    "compilerOptions": {
        "target": "es2024",
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "rootDir": "src",
        "outDir": "build",
        "declaration": true,
        "declarationMap": true,
        "isolatedModules": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "build"]
}
